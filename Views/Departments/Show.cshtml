@model MIM.Models.Department@{     Layout = null;    string modal_size = "modal-sm"; // "modal-sm" "modal", "modal-lg" "modal-xl"}<div class="modal" id="department-modal">    <div class="modal-dialog modal-dialog-centered @modal_size">        <div class="modal-content">            <div class="modal-header">                <h4 class="modal-title">@LanguageHelper.GetString("Department.ModalTitle.Show")</h4>                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>            </div><div class="container"></div>            <div style="padding-bottom: 0px;" class="modal-body">                <dl class="dl-horizontal">                    <div class="row">                        <dt> @LanguageHelper.GetStringForModal("Department.Name") &nbsp;</dt>                        <dd> @Html.DisplayFor(model => model.Name) </dd>                    </div>                    <div class="row">                        <dt> @LanguageHelper.GetStringForModal("Department.Description") &nbsp;</dt>                        <dd> @Html.DisplayFor(model => model.Description) </dd>                    </div>                    <div class="row">                        <dt> @LanguageHelper.GetStringForModal("Department.Manager") &nbsp;</dt>                        <dd> @Html.DisplayFor(model => model.User.fullname) </dd>                    </div>                </dl>        </div>        </div>    </div></div>