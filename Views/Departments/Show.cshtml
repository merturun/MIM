@model MIM.Models.Department@{     Layout = null;    string modal_size = "modal-lg"; // "modal-sm" "modal", "modal-lg" "modal-xl"}<div class="modal" id="department-modal">    <div class="modal-dialog modal-dialog-centered @modal_size">        <div class="modal-content">            <div class="modal-header">                <h4 class="modal-title">@LanguageHelper.GetString("Department.ModalTitle.Show")</h4>                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>            </div><div class="container"></div>            <div style="padding-bottom: 0px;" class="modal-body">                <center>                    <div class="row align-items-center">                        <div style="width:33%">                            @Html.LabelFor(model => model.Name, @LanguageHelper.GetString("Department.Name"), htmlAttributes: new { @class = "control-label font-weight-bold my-auto" })                            <hr style="width:50%;" />                            @Html.DisplayFor(model => model.Name)                        </div>                        <div style="width:33%">                            @Html.LabelFor(model => model.Description, @LanguageHelper.GetString("Department.Description"), htmlAttributes: new { @class = "control-label font-weight-bold my-auto" })                            <hr style="width:50%;" />                            @Html.DisplayFor(model => model.Description)                        </div>                        <div style="width:33%">                            @Html.LabelFor(model => model.User.fullname, @LanguageHelper.GetString("Department.Manager"), htmlAttributes: new { @class = "control-label font-weight-bold my-auto" })                            <hr style="width:50%;" />                            @Html.DisplayFor(model => model.User.fullname)                        </div>                    </div>                    <br />                </center>        </div>        </div>    </div></div>