@model MIM.Models.Department@{ Layout = null;                ViewBag.Title = LanguageHelper.GetString("Model.Departments");                string modal_size = "modal-sm"; // "modal-sm" "modal", "modal-lg" "modal-xl"}<div class="modal" id="department-modal">    <div class="modal-dialog modal-dialog-centered @modal_size">        <div class="modal-content">            <div class="modal-header">                <h4 class="modal-title">@LanguageHelper.GetString("Department.ModalTitle.Delete")</h4>                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>            </div><div class="container"></div>            <div style="padding-bottom: 0px;" class="modal-body">                <dl class="dl-horizontal">                    <div class="row">                        <dt> @LanguageHelper.GetStringForModal("Department.Name") &nbsp;</dt>                        <dd> @Html.DisplayFor(model => model.Name) </dd>                    </div>                    <div class="row">                        <dt> @LanguageHelper.GetStringForModal("Department.Description") &nbsp;</dt>                        <dd> @Html.DisplayFor(model => model.Description) </dd>                    </div>                    <div class="row">                        <dt> @LanguageHelper.GetStringForModal("Department.Manager") &nbsp;</dt>                        <dd> @Html.DisplayFor(model => model.User.fullname) </dd>                    </div>                </dl>                @using (Ajax.BeginForm("Delete", "Departments", new AjaxOptions { HttpMethod = "POST", OnSuccess = "GetTable()", OnFailure = "toastr.error('" + LanguageHelper.GetString("Model.Toastr.DeleteError") + "', '" + LanguageHelper.GetString("Model.Department") + "')" }))                {                    @Html.AntiForgeryToken()        <div class="form-actions no-color">            @Html.HiddenFor(modelItem => modelItem.DepartmentID)            <input data-dismiss="modal" value="@LanguageHelper.GetString("Modal.Button.Cancel")" class="btn btn-primary col-3" />            <input type="submit" value="@LanguageHelper.GetString("Modal.Button.Delete")" class="btn btn-danger col-2" />        </div>                }            </div>        </div>    </div></div></script><script>    function GetTable() {        $("#department-modal").modal('hide');        toastr.success('@LanguageHelper.GetString("Model.Toastr.DeleteSuccess")', '@LanguageHelper.GetString("Model.Department")')        $.ajax({            url: '/Departments/Table',            method: 'GET',            success: function (data) {                $('#dt-departments_table').html(data)            },            error: function (data) {                $('#dt-departments_table').html("table error")            },        });    };</script>