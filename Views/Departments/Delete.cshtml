@model MIM.Models.Department@{ Layout = null;                ViewBag.Title = LanguageHelper.GetString("Model.Departments");                string modal_size = "modal-lg"; // "modal-sm" "modal", "modal-lg" "modal-xl"}<div class="modal" id="department-modal">    <div class="modal-dialog modal-dialog-centered @modal_size">        <div class="modal-content">            <div class="modal-header">                <h4 class="modal-title">@LanguageHelper.GetString("Department.ModalTitle.Delete")</h4>                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>            </div><div class="container"></div>            <div style="padding-bottom: 0px;" class="modal-body">                <dl class="dl-horizontal">                    <dt>                        @Html.DisplayNameFor(model => model.Name)                    </dt>                    <dd>                        @Html.DisplayFor(model => model.Name)                    </dd>                    <dt>                        @Html.DisplayNameFor(model => model.Description)                    </dt>                    <dd>                        @Html.DisplayFor(model => model.Description)                    </dd>                    <dt>                        @Html.DisplayNameFor(model => model.User.fullname)                    </dt>                    <dd>                        @Html.DisplayFor(model => model.User.fullname)                    </dd>                </dl>                @using (Ajax.BeginForm("Delete", "Departments", new AjaxOptions { HttpMethod = "POST", OnSuccess = "GetTable()", OnFailure = "toastr.error('Silme Başarısız', 'Departman')" }, new { id = "departmentdelete" }))                {                    @Html.AntiForgeryToken()                    <div class="form-actions no-color">                        @Html.HiddenFor(modelItem => modelItem.DepartmentID)                        <input type="submit" value="@LanguageHelper.GetString("Modal.Button.Delete")" class="btn btn-danger col-1" />                        <input data-dismiss="modal" value="@LanguageHelper.GetString("Modal.Button.Cancel")" class="btn btn-primary col-2" />                    </div>}            </div>        </div>    </div></div></script><script>    function GetTable() {        $("#department-modal").modal('hide');        toastr.success("Silme Başarılı", "Departman")        $.ajax({            url: '/Departments/Table',            method: 'GET',            success: function (data) {                $('#dt-departments_table').html(data)            },            error: function (data) {                $('#dt-departments_table').html("table error")            },        });    };</script>