@{
    ViewBag.Title = @LanguageHelper.GetString("HomePage.Title");
}
<script src="~/assets/js/common.js"></script>
<script src="~/Scripts/chart.min.js"></script>

<div class="col-6" style="height:400px">
    <canvas id="barChart" width="400" height="100"></canvas>
</div>


<script>
    var c = document.getElementById("barChart");
    var ctx = c.getContext("2d");
    var tData = $.getValues("/Chart/UsersWithTitlesBarChart");
    var myBarChart = new Chart(ctx, {
        type: 'bar',
        data: tData,
        options: {
            title: {
                display: true,
                text: 'Custom Chart Title'
            }
        }
    });
</script>