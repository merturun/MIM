@model IEnumerable<MIM.Models.Title>

@{
    ViewBag.Title = "List";
}

<h2>Bölümler</h2>

<table class="table table-hover">
    <tr>
        <th>
            ID
        </th>
        <th>
            Adı
        </th>
        <th>
            Açıklama
        </th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <th>
                @item.titleID
            </th>

            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.ActionLink(LanguageHelper.GetString("Crud.Edit"), "Edit", new { id = item.titleID }, new { @class = "btn btn-danger" })

            </td>
            <td>
                @Html.ActionLink(LanguageHelper.GetString("Crud.Delete"), "Delete", new { id = item.titleID }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink(LanguageHelper.GetString("Crud.Create"), "Create", "", new { @class = "btn btn-primary" })
</p>
