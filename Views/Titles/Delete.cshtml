@model MIM.Models.Title
@{
    Layout = null;
    ViewBag.Title = LanguageHelper.GetString("Model.Titles");
    string modal_size = "modal"; // "modal-sm" "modal", "modal-lg" "modal-xl"
}
<div class="modal" id="title-modal">
    <div class="modal-dialog modal-dialog-centered @modal_size">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@LanguageHelper.GetString("Title.ModalTitle.Delete")</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div><div class="container"></div>
                  <div style="padding-bottom: 0px;" class="modal-body">
                      <dl class="dl-horizontal">

                          <dt>
                              @LanguageHelper.GetString("Title.Name")
                          </dt>

                          <dd>
                              @Html.DisplayFor(model => model.Name)
                          </dd>

                          <dt>
                              @LanguageHelper.GetString("Title.Description")
                          </dt>

                          <dd>
                              @Html.DisplayFor(model => model.Description)
                          </dd>

                      </dl>
                      @using (Ajax.BeginForm("Delete", "Titles", new AjaxOptions { HttpMethod = "POST", OnSuccess = "GetTable()", OnFailure= "toastr.error('Silme Başarısız', 'Ünvan')" }, new { id = "titledelete" }))
                      {
                          @Html.AntiForgeryToken()
                          <div class="form-actions no-color">
                              @Html.HiddenFor(modelItem => modelItem.TitleID)
                              <input type="submit" value="@LanguageHelper.GetString("Modal.Button.Delete")" class="btn btn-danger col-2" />
                              <input type="cancel" id="title-modal-cancel" value="@LanguageHelper.GetString("Modal.Button.Cancel")" class="btn btn-primary col-2" />
                          </div>
                      }
                  </div>
        </div>
    </div>
</div>
<script>
    $("#title-modal-cancel").click(function (event) { $("#title-modal").modal('hide'); })
</script>
<script>
    function GetTable() {
        $("#title-modal").modal('hide');
        toastr.success("Silme Başarılı", "Ünvan")
        $.ajax({
            url: '/Titles/Table',
            method: 'GET',
            success: function (data) {
                $('#dt-titles_table').html(data)
            },
            error: function (data) {
                $('#dt-titles_table').html("table error")
            },
        });
    };
</script>
