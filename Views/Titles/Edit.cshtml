@model MIM.Models.Title
@{
    Layout = null;
    string modal_size = "modal"; // "modal-sm" "modal", "modal-lg" "modal-xl"
}

<div class="modal" id="title-modal">
    <div class="modal-dialog modal-dialog-centered @modal_size">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@LanguageHelper.GetString("Title.ModalTitle.Edit")</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div><div class="container"></div>
                  <div style="padding-bottom: 0px;" class="modal-body">
                      @using (Ajax.BeginForm("Edit","Titles", new AjaxOptions { HttpMethod="POST", OnSuccess="GetTable()" },new { id = "titleedit" }))
                      {
                          @Html.AntiForgeryToken()
                          @Html.HiddenFor(model => model.TitleID)

                          <div class="form-group">
                              @Html.LabelFor(model => model.Name, @LanguageHelper.GetStringForModal("Title.Name"), htmlAttributes: new { @class = "control-label col-md-3" })
                              <div class="col-md-12">
                                  @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                              </div>
                          </div>

                          <div class="form-group">
                              @Html.LabelFor(model => model.Description, @LanguageHelper.GetStringForModal("Title.Description"), htmlAttributes: new { @class = "control-label col-md-3" })
                              <div class="col-md-12">
                                  @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                              </div>
                          </div>

                          <div class="modal-footer">
                              <input class="btn btn-warning" type="submit" value="@LanguageHelper.GetString("Modal.Button.SaveChanges")" />
                              <input type="cancel" id="title-modal-cancel" value="@LanguageHelper.GetString("Modal.Button.Cancel")" class="btn btn-primary col-3" />
                          </div>
                      }
                  </div>
        </div>
    </div>
</div>
<script>
    $("#title-modal-cancel").click(function (event) { $("#title-modal").modal('hide'); })
</script>
<script>
    var arrows = {
        leftArrow: '<i class="la la-angle-left"></i>',
        rightArrow: '<i class="la la-angle-right"></i>'
    }

    $('#bornDate, #kt_datepicker_3_validate').datepicker({
        rtl: KTUtil.isRTL(),
        todayBtn: "linked",
        format: 'dd/mm/yyyy',
        clearBtn: true,
        todayHighlight: true,
        templates: arrows
    });

    function GetTable() {
        $("#user-modal").modal('hide');
        toastr.success("Düzenleme Başarılı", "Kullanıcı")
        $.ajax({
            url: '/Users/Table',
            method: 'GET',
            success: function (data) {
                $('#dt-users_table').html(data)
            },
            error: function (data) {
                $('#dt-users_table').html("table error")
            },
        });
    };
</script>